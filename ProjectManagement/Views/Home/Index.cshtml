@model IEnumerable<ProjectManagement.Models.RoleViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            Роли:
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoleName)
        </td>
        <td>
            @Html.ActionLink("Добавить", "CreateEmployee", new { id = item.Id })
        </td>
    </tr>
    }

</table>

<div>
    @Html.ActionLink("Показать сотрудников", "ShowEmployee")
</div>